<div class="span4">
  <div class="photo">
    <%= image_tag photo.image_url.to_s %>
    <div class="row-fluid caption">
      <div class="span10 caption-text">
        <%= photo.caption %>
      </div>
      <div class="span1">
        <% if photo.user == current_user %>
          <%= link_to 'x', photo, method: :delete %>
        <% end %>
      </div>
      <% if current_user %>
        <div class="span1">
          <% if current_user.voted_on? photo %>
            Voted
          <% else %>
            <%= form_for photo.votes.build do |f| %>
              <%= f.hidden_field :photo_id %>
              <%=f.submit "#vote" %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
