<div class="item">
 
    <%= image_tag photo.image_url.to_s %>
    <div>
      <% if current_user %>
        <div>
          <% if current_user.voted_on? photo %>
            Voted
          <% else %>
            <%= form_for photo.votes.build do |f| %>
              <%= f.hidden_field :photo_id %>
              <%=f.submit "#vote" %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    
  </div>
</div>


