<% if current_user.admin? %>
  <div id="page-container">
  	<h1> Add an inspiration </h1>

  	<%= form_for @inspiration do |f| %>
  		<% if flash[:error] -%>
  		  <p class='error'><%= flash[:error] %></p>
  		<% end -%>
  		<%=f.text_field :content, :placeholder => "inspire folks" %>
  		<%=f.submit "inspire the world!" %>
  	<% end %>

  	<h1> Admin Inspirations </h1>

  	<%= render :partial => '/shared/inspiration_list_item', :collection => @admin_inspirations.pending.reverse %>
  	<%= render :partial => '/shared/inspiration_list_item', :collection => @admin_inspirations.live %>
  	<%= render :partial => '/shared/inspiration_list_item', :collection => @admin_inspirations.complete %>
  </div>
<% else %>
  <div id="page-container">
    <h1 class="profile-title">Explore</h1>
    <div class="row-fluid profile-bar"> 
    	<div><h3>Today's inspiration:</h3></div>
      <div class="span9 content-name">
         <%= @today_inspiration.content %>
      </div>
      <%=link_to "", root_path %>
      <div class="span2 content-date">
      	<%=@today_inspiration.photo_count %> photos
      </div>
    </div>
    <%= render :partial => 'shared/inspiration_explore_item', :collection => @inspirations %>
<% end %>
<%= render :partial => 'shared/footer_mobile_other_pages' %>